{
  "compilerOptions": {
    "esModuleInterop": true,
    "importHelpers": true,
    "isolatedModules": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "target": "ESNext"
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"]
}
